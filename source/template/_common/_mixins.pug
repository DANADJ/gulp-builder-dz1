//-Menu social icon
mixin social(mod)
	//MENU SOCIAL ICONS
	ul(class="social" + mod)
		each val, index in socials
			li.social__item
				a.social__link(href=val class="social__link--" + index target="_blank") #{index}

//- Menu navigation
mixin menu(activePage)
	// MENU NAVIGATION
	ul.menu#menu
		each item in navigation
			if item.pageNumber != activePage
				li.menu__item
					a.button.link(href=item.pageLink) #{item.pageContent}
			else
				li.menu__item
					a.button.link.button__active-page(href=item.pageLink) #{item.pageContent}
//- Menu link
mixin menu-link(mod, clear)
	ul(class='list'+mod+clear)
		each item in navigation
			li(class='list__item'+mod+'-item')
				a.link(href=item.pageLink) #{item.pageContent}

//- List of contacts
mixin contacts(mod)
	ul.list-line(class=mod)
		each obj in contacts
			if obj.href
				li.list-line__item(class=mod+'__item')
					a.link(href=obj.href)= obj.content
			else
				li.list-line__item(class=mod+'__item')= obj.content

//- Footer
mixin footer(mod)
	if mod == ''
		footer.footer.footer__bg
			div.conteiner
				ol.footer__main.clearfix
					li.footer__parts.footer__parts--desc
						h4 Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool.
					li.footer__parts.footer__parts--links
						+menu-link(' footer__menu', ' clearfix')
						+social('')
					li.footer__parts.footer__parts--cont
						+contacts
			include ../_parts/_signfooter.pug
	else
		footer(class="footer footer__" + mod)
			div.conteiner
				include ../_parts/_signfooter.pug

//- Reviews
mixin reviews()
	ol.reviews.clearfix
		each rev in reviews
			li.left.reviews__item
				div.circle-photo
					img.img(src=`./assets/img/content/${rev.photo}` alt=rev.person)
				p.text= rev.words
				div.person
					h3.person__name= rev.person
					h4.person__desc= rev.desc